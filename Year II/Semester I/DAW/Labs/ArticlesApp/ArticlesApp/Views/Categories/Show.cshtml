@model ArticlesApp.Models.Category

@{
    ViewBag.Title = "Afisare categorie";
}

<h2>@ViewBag.Title</h2>
<br />

<p>@Model.CategoryName</p>

<a class="btn btn-primary" href="/Categories/Edit/@Model.Id">Editeaza categoria</a>
<br />
<br />
<form method="post" action="/Categories/Delete/@Model.Id">
    <button class="btn btn-danger" type="submit">Sterge categoria</button>
</form>

<br />
<a class="btn btn-outline-success" href="/Categories/Index/">Afisare lista categorii</a>

<br />
<hr />
