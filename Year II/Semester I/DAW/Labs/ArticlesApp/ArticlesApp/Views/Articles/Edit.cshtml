@model ArticlesApp.Models.Article

@if (ViewBag.Message != null)
{
    <h2 class="@ViewBag.Alert p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}

<h2 class="text-center mt-5">Editare articol</h2>
<br />
@using (Html.BeginForm(actionName: "Edit", controllerName: "Articles"))
{
    <div class="row">

        <div class="col-6 offset-3">

            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            @Html.Label("Title", "Titlu Articol")
            <br />

            @Html.TextBox("Title", @Model.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
            <br /><br />

            @Html.Label("Content", "Continut Articol")
            <br />

            @Html.TextArea("Content", Model.Content, new { @class = "form-control summernote" })
            @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
            <br /><br />

            <label>Editati categoria</label>
            @Html.DropDownListFor(m => m.CategoryId, new
            SelectList(Model.Categ, "Value", "Text"),
            null, new { @class = "form-control"})
            @Html.ValidationMessageFor(m => m.CategoryId, null, new { @class = "text-danger" })
            <br /><br />

            <button class="btn btn-success" type="submit">Modifica articolul</button>

        </div>

    </div>
}